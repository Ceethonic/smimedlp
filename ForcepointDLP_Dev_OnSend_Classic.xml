<?xml version="1.0" encoding="utf-8"?>
<OfficeApp
  xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
  xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides"
  xsi:type="MailApp">

  <!-- DEV: oddzielny GUID (żeby nie kolidować z produkcyjnym Forcepoint) -->
  <Id>9F3B66B0-4E6A-4E5B-8C6F-2B8B469C1B7A</Id>

  <Version>1.0.0.0</Version>
  <ProviderName>smimedlp (DEV)</ProviderName>
  <DefaultLocale>pl-pl</DefaultLocale>

  <DisplayName DefaultValue="smimedlp (DEV Classic OnSend)" />
  <Description DefaultValue="DEV: Classic Outlook (outlook.exe) ItemSend + Diagnostics (GitHub Pages)." />

  <!-- Ikony: dokładnie jak w oryginalnym Forcepoint -->
  <IconUrl DefaultValue="https://cdn.websense.com/addins/DLPOfficeAddin/v25.09/icon.png" />
  <HighResolutionIconUrl DefaultValue="https://cdn.websense.com/addins/DLPOfficeAddin/v25.09/icon.png" />

  <SupportUrl DefaultValue="https://ceethonic.github.io/smimedlp/diagnostics.html" />

  <AppDomains>
    <AppDomain>https://ceethonic.github.io</AppDomain>
    <AppDomain>https://cdn.websense.com</AppDomain>
  </AppDomains>

  <Hosts>
    <Host Name="Mailbox" />
  </Hosts>

  <Requirements>
    <Sets DefaultMinVersion="1.5">
      <Set Name="Mailbox" />
    </Sets>
  </Requirements>

  <FormSettings>
    <Form xsi:type="ItemEdit">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://ceethonic.github.io/smimedlp/index.html" />
      </DesktopSettings>
    </Form>
  </FormSettings>

  <Permissions>ReadWriteMailbox</Permissions>

  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Edit" />
    <Rule xsi:type="ItemIs" ItemType="Appointment" FormType="Edit" />
  </Rule>

  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
    <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides/1.1" xsi:type="VersionOverridesV1_1">

      <Requirements>
        <bt:Sets DefaultMinVersion="1.5">
          <bt:Set Name="Mailbox" />
        </bt:Sets>
      </Requirements>

      <Hosts>
        <Host xsi:type="MailHost">
          <DesktopFormFactor>

            <!-- Function file dla ItemSend -->
            <FunctionFile resid="residFunctionFileUrl" />

            <!-- 1) ON-SEND (ItemSend) -->
            <ExtensionPoint xsi:type="Events">
              <Event Type="ItemSend"
                     FunctionExecution="synchronous"
                     FunctionName="onMessageSendHandler" />
            </ExtensionPoint>

            <!-- 2) Panel diagnostyczny (przycisk w compose) -->
            <ExtensionPoint xsi:type="MessageComposeCommandSurface">
              <OfficeTab id="TabDefault">
                <Group id="grpDev">
                  <Label resid="residGroupLabel"/>
                  <Control xsi:type="Button" id="btnDiagnostics">
                    <Label resid="residBtnLabel"/>
                    <Supertip>
                      <Title resid="residBtnLabel"/>
                      <Description resid="residBtnDesc"/>
                    </Supertip>
                    <Icon>
                      <!-- Jedna ikona, użyta dla wszystkich rozmiarów -->
                      <bt:Image size="16" resid="residIcon16"/>
                      <bt:Image size="32" resid="residIcon32"/>
                      <bt:Image size="80" resid="residIcon80"/>
                    </Icon>
                    <Action xsi:type="ShowTaskpane">
                      <SourceLocation resid="residDiagnosticsUrl"/>
                    </Action>
                  </Control>
                </Group>
              </OfficeTab>
            </ExtensionPoint>

          </DesktopFormFactor>
        </Host>
      </Hosts>

      <Resources>
        <bt:Images>
          <bt:Image id="residIcon16" DefaultValue="https://cdn.websense.com/addins/DLPOfficeAddin/v25.09/icon.png"/>
          <bt:Image id="residIcon32" DefaultValue="https://cdn.websense.com/addins/DLPOfficeAddin/v25.09/icon.png"/>
          <bt:Image id="residIcon80" DefaultValue="https://cdn.websense.com/addins/DLPOfficeAddin/v25.09/icon.png"/>
        </bt:Images>

        <bt:Urls>
          <bt:Url id="residFunctionFileUrl" DefaultValue="https://ceethonic.github.io/smimedlp/index.html" />
          <bt:Url id="residDiagnosticsUrl" DefaultValue="https://ceethonic.github.io/smimedlp/diagnostics.html" />
        </bt:Urls>

        <bt:ShortStrings>
          <bt:String id="residGroupLabel" DefaultValue="smimedlp DEV"/>
          <bt:String id="residBtnLabel" DefaultValue="DLP Logs"/>
        </bt:ShortStrings>

        <bt:LongStrings>
          <bt:String id="residBtnDesc" DefaultValue="Podgląd i eksport logów dodatku (DEV)."/>
        </bt:LongStrings>
      </Resources>

    </VersionOverrides>
  </VersionOverrides>
</OfficeApp>
